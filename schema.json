{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "type": "object",
    "additionalProperties": "false",
    "required": [
        "version",
        "channel",
        "items"
    ],
    "properties": {
        "version": {
            "type": "string"
        },
        "channel": {
            "$ref": "#/definitions/Channel"
        },
        "items": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Item"
            }
        }
    },
    "definitions": {
        "Channel": {
            "type": "object",
            "properties": {
                "required": [
                    "title"
                ],
                "title": {
                    "type": "string"
                }
            }
        },
        "Item": {
            "type": "object",
            "properties": {
                "required": [
                    "title",
                    "published"
                ],
                "title": {
                    "type": "string"
                },
                "published": {
                    "type": "string",
                    "format": "date-time"
                },
                "explicit": {
                    "type": "boolean"
                }
            }
        }
    }
}
