{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://raw.githubusercontent.com/open-podcast-format/specification/master/schema.json",
    "type": "object",
    "additionalProperties": "false",
    "required": [
        "version",
        "channel",
        "items"
    ],
    "properties": {
        "version": {
            "type": "string"
        },
        "channel": {
            "$ref": "#/definitions/Channel"
        },
        "items": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Item"
            }
        }
    },
    "definitions": {
        "Channel": {
            "type": "object",
            "properties": {
                "required": [
                    "title"
                ],
                "title": {
                    "type": "string"
                },
                "avatar": {
                    "type": "array",
                    "minItems": 1,
                    "maxItems": 8,
                    "items": {
                        "$ref": "#/definitions/Picture"
                    }
                }
            }
        },
        "Picture": {
            "type": "object",
            "properties": {
                "required": [
                    "mime",
                    "url"
                ],
                "mime": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                }
            }
        },
        "Item": {
            "type": "object",
            "properties": {
                "required": [
                    "title",
                    "published"
                ],
                "title": {
                    "type": "string"
                },
                "published": {
                    "type": "string",
                    "format": "date-time"
                },
                "explicit": {
                    "type": "boolean"
                },
                "avatar": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Picture"
                    }
                }
            }
        }
    }
}
